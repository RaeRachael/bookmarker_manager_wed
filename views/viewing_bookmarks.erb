    <input type=hidden name=id value='<%=bookmark.id%>'>
    <input type='submit' name='delete' id='delete<%=bookmark.id%>' value="delete">
  </form>
  <form action='/update_bookmark' method='post'>
    <input type=hidden name=id value='<%=bookmark.id%>'>
    <input type='submit' name='update' id='update<%=bookmark.id%>' value="update">
  </form></li>
  <% end %>
</ul>

<form action='/add_bookmark' method='get'>
  <input type='submit' name='bookmark' value='add bookmark'/>
</form>
